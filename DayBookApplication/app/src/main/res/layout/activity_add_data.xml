<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- This dialog activity for adding information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#21F3F3"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/shareButtonId"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="#00000000"
            android:drawableStart="@drawable/share"
            android:drawableLeft="@drawable/share" />

        <Button
            android:id="@+id/cacelButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="#00000000"
            android:text="cancel" />

        <Button
            android:id="@+id/saveButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="#00000000"
            android:text="Save" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/subjectEditTextId"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#BFFFFCFC"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/allerta"
            android:foreground="@drawable/image9"
            android:hint="Add Title"
            android:inputType="textPersonName"
            android:maxLength="35"
            android:textAlignment="center"
            android:textColor="#232323"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#673AB7"
            android:textColorLink="#F44336"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="2dp"
            android:gravity="center_horizontal" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="38dp">

        <EditText
            android:id="@+id/descriptionEditTextId"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#F3040000"
            android:backgroundTint="#FFFF99"
            android:ems="10"
            android:fontFamily="casual"
            android:gravity="start"
            android:hint="Add text here ..."
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textColor="#5E5D5E"
            android:textColorHint="#673AB7"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="48dp" />
    </LinearLayout>

</LinearLayout>