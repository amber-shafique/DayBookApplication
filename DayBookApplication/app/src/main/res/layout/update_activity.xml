<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- This dialog activity for updating information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#21F3F3"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/shareButtonIdUpdate"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="#00000000"
            android:drawableStart="@drawable/share"
            android:drawableLeft="@drawable/share" />

        <Button
            android:id="@+id/cacelButtonIdUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="#00000000"
            android:text="cancel" />

        <Button
            android:id="@+id/saveButtonIdUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:background="#00000000"
            android:text="Update" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/subjectEditTextIdUpdate"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="#00ffffff"
            android:ems="10"
            android:fontFamily="@font/allerta"
            android:gravity="center_horizontal"

            android:hint="Update Title"
            android:inputType="textPersonName"
            android:maxLength="35"
            android:textColorHint="#673AB7"
            android:textSize="30sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFF99"
        android:orientation="vertical">

        <EditText
            android:id="@+id/descriptionEditTextIdUpdate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ECE462"
            android:backgroundTint="#00ffffff"
            android:ems="10"
            android:fontFamily="casual"
            android:gravity="start"
            android:hint="Update text here ..."
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textColorHint="#673AB7"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>